<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferencesActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="600dp"
        android:fontFamily="@font/caveat"
        android:gravity="center_horizontal"
        android:text="@string/preference_page_name"
        android:textSize="85sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg"
            android:backgroundTint="#3F51B5"
            android:fontFamily="@font/caveat"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/choix_language"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="299dp" />

        <RadioGroup
            android:id="@+id/btnLangue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center">

            <RadioButton
                android:id="@+id/btnLangueFrancais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caveat"
                android:gravity="center"
                android:padding="10sp"
                android:text="@string/choix_languageFr"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/btnLangueAnglais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caveat"
                android:gravity="center"
                android:padding="10sp"
                android:text="@string/choix_languageEn"
                android:textSize="30sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg"
            android:backgroundTint="#3F51B5"
            android:fontFamily="@font/caveat"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/choix_niveau_difficulté"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="299dp" />

        <RadioGroup
            android:id="@+id/btnDifficulter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center">

            <RadioButton
                android:id="@+id/btnDifficulterFacile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caveat"
                android:padding="10sp"
                android:text="@string/choix_niveau_difficulté_facile"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/btnDifficulterNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caveat"
                android:padding="10sp"
                android:text="@string/choix_niveau_difficulté_normal"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/btnDifficulterDifficile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caveat"
                android:padding="10sp"
                android:text="@string/choix_niveau_difficulté_difficile"
                android:textSize="30sp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/btnRetourAccueil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:backgroundTint="#322F2F"
            android:fontFamily="@font/caveat"
            android:padding="16sp"
            android:text="@string/page_preference_bouton_accueil"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnDictionnaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:backgroundTint="#322F2F"
            android:fontFamily="@font/caveat"
            android:padding="16sp"
            android:text="@string/dictionnaire"
            android:textColorHighlight="#BA1A1A"
            android:textColorHint="#CA1B1B"
            android:textColorLink="#875959"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>